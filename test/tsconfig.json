{
    "compilerOptions": {
        /* --- CONFIGURACIÓN DE RUTAS (AQUÍ ESTABA EL ERROR) --- */
        "baseUrl": ".",  /* El ancla necesaria para que "paths" funcione */

        "paths": {
            /* Apuntamos directamente al archivo de definiciones .d.ts */
            "pdfmake/interfaces": ["../node_modules/@types/pdfmake/interfaces.d.ts"]
        },

        /* --- CONFIGURACIÓN DE SALIDA --- */
        "outDir": "../dist-test",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,

        /* --- MÓDULOS Y COMPATIBILIDAD --- */
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,

        /* --- REGLAS ESTRICTAS --- */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "strictBindCallApply": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true
    },
    "include": [
        ".",
        "../src/**/*"
    ]
}